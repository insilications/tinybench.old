{
    "include": ["/**/*.js", "/*.js", "/**/*.d.ts", "/*.d.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "ES2022",
        "lib": ["ES2022", "DOM", "dom.iterable"],
        "target": "ES2022",
        "jsx": "react",
        "allowJs": true,
        "checkJs": true,
        "strict": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist"
    }
}
